{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ESNext",
		"outDir": "build",
		"strict": true,
		"incremental": true,
		"removeComments": true,
		"strictNullChecks": false,
		// "moduleResolution": "node", this fixes that awful caching
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"src/*": ["src/*"]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./src/typings"
		]
	}
}
