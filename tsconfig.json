{
    // "exclude": [
    //     "node_modules",
    //     "./node_modules",
    //     "./node_modules/*",
    //     "./node_modules/@types/node/index.d.ts"
    // ],
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "outDir": "build",
        "strict": true,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": false,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"]
        },
        "typeRoots": [
            "./src/typings", 
            "./node_modules/@types"
        ]
    }
}
