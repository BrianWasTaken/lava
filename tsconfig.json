{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ESNext",
		"outDir": "dist",
		"strict": true,
		"incremental": true,
		"removeComments": true,
		"strictNullChecks": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"lava/*": ["src/library/*"],
			"plugins/*": ["src/plugins/*"]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./src/typings"
		]
	}
}
