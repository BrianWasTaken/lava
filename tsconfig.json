{
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts"
    ],
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "outDir": "build",
        "strict": true,
        "allowJs": true,
        "incremental": true,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": ".",
        "typeRoots": [
            "./src/typings", 
            "./node_modules/@types"
        ],
        "paths": {
            "src/*": ["src/*"],
            "config/*": ["config/*"],
            "lib/*": ["lib/*"]
        },
    }
}
