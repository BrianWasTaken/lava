{
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts"
    ],
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "outDir": "build",
        "strict": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@config/*": ["config/*"],
            "@lib/*": ["lib/*"]
        }
    }
}
