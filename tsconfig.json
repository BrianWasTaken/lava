{
	"compilerOptions": {
		"module": "commonJS",
		"target": "ESNext",
		"outDir": "dist",
		"strict": true,
		"incremental": true,
		"removeComments": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": false,
		"baseUrl": ".",
		"typeRoots": [
			"./node_modules/@types",
		]
	}
}
