{
    "exclude": ["./node_modules"],
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "outDir": "build",
        "strict": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@lava/src/*": ["src/*"],
            "@lava/config/*": ["config/*"],
            "@lava/lib/*": ["lib/*"]
        },
        "typeRoots": [
            "./src/lib/typings", 
            "./node_modules/@types"
        ]
    }
}
